<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AgroVentas.Vistas.Entregas">
    <ContentPage.Content>
        <ScrollView x:Name="EntregasScrollView">
            <StackLayout>
                <Grid>
                    <StackLayout Padding="10,10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Row="0" Grid.Column="0" Text="&#xf0c9; Ver Solicitudes" BorderRadius="20" TextColor="White" BackgroundColor="#343a40" FontFamily="{StaticResource FontAwesome}" Clicked="Obtener_PedidosAgente" />
                        </Grid>
                    </StackLayout>
                </Grid>
                <Grid>
                    <StackLayout x:Name="ReparidoresARStack" Padding="10,10"></StackLayout>
                </Grid>
                <Grid>
                    <StackLayout x:Name="RepartosListaForm"></StackLayout>
                </Grid>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>